{% extends "layout.twig" %}

{% block title %}{{ user.name }}{% endblock %}

{% block content %}
<h2>ホーム</h2>

{% if is_following is defined and is_following is same as (true) %}
<p>フォロー中</p>
{% elseif is_following is defined and is_following is same as (false) %}
<form action="/account/follow" method="POST">
    {{ csrf_view_model.present | raw }}
    <input type="hidden" name="following_user_id" value="{{ user.id }}" />
    <input type="submit" value="フォローする" />
</form>
{% endif %}

